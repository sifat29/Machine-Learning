{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"name":"loss","provenance":[],"authorship_tag":"ABX9TyMOrSzLh1/MenPX2RyIweqj"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","execution_count":null,"metadata":{"id":"o9R_IGWrPv3u"},"outputs":[],"source":["#defining the triplet loss class\n","class TripletLoss1:\n","  def __init__(self, margin):\n","    self.margin = margin\n","#calculate the loss function of triplet loss          \n","  def loss(self,anchor, positive, negative):\n","    positive_distance =torch.sqrt(torch.sum(torch.square(anchor - positive)))\n","    negative_distance =torch.sqrt(torch.sum(torch.square(anchor - negative)))\n","    loss1 = ((positive_distance - negative_distance)+ self.margin)\n","    loss = torch.clip(loss1, 0, None)\n","    return loss"]}]}